<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Interactive Budget App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body { font-family: Arial, sans-serif; margin: 2em; }
    .budget-table { border-collapse: collapse; width: 100%; }
    .budget-table th, .budget-table td { border: 1px solid #ddd; padding: 8px; }
    .budget-table th { background-color: #f2f2f2; }
    input[type="number"] { width: 80px; }
  </style>
</head>
<body>
  <h1>Interactive Budget</h1>
  <table class="budget-table">
    <thead>
      <tr>
        <th>Item</th>
        <th>Budgeted</th>
        <th>Actual</th>
        <th>Difference</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Rent</td>
        <td><input type="number" id="budget-rent" value="1000"></td>
        <td><input type="number" id="actual-rent" value="1000"></td>
        <td><span id="diff-rent">0</span></td>
      </tr>
      <tr>
        <td>Groceries</td>
        <td><input type="number" id="budget-groceries" value="300"></td>
        <td><input type="number" id="actual-groceries" value="300"></td>
        <td><span id="diff-groceries">0</span></td>
      </tr>
      <tr>
        <td>Utilities</td>
        <td><input type="number" id="budget-utilities" value="150"></td>
        <td><input type="number" id="actual-utilities" value="150"></td>
        <td><span id="diff-utilities">0</span></td>
      </tr>
      <!-- Add more rows as needed -->
    </tbody>
  </table>
  <script>
    function updateDifference(item) {
      var budgeted = document.getElementById('budget-' + item).value;
      var actual = document.getElementById('actual-' + item).value;
      var diff = actual - budgeted;
      document.getElementById('diff-' + item).textContent = diff;
    }

    ['rent', 'groceries', 'utilities'].forEach(function(item) {
      document.getElementById('budget-' + item).addEventListener('input', function() {
        updateDifference(item);
      });
      document.getElementById('actual-' + item).addEventListener('input', function() {
        updateDifference(item);
      });
    });

    // Initialize values
    ['rent', 'groceries', 'utilities'].forEach(updateDifference);
  </script>
</body>
</html>
